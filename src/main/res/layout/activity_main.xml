<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New List"
        android:id="@+id/buttonNewList"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue making List"
        android:id="@+id/buttonContinueList"
        android:layout_below="@+id/buttonNewList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop with completed list"
        android:id="@+id/buttonShopMode"
        android:layout_below="@+id/buttonContinueList"
        android:layout_alignStart="@+id/buttonContinueList"
        android:layout_marginTop="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_store"
        android:id="@+id/buttonCreateStore"
        android:layout_alignTop="@+id/buttonCreateItem"
        android:onClick="StoreClick"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_item"
        android:id="@+id/buttonCreateItem"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="ItemClick"
        android:layout_alignEnd="@+id/buttonShopMode" />

</RelativeLayout>
